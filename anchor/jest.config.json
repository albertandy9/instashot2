{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "testMatch": ["**/tests/**/*.ts"],
  "moduleFileExtensions": ["ts", "js"],
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "isolatedModules": true,
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "testTimeout": 60000,
  "setupFilesAfterEnv": [],
  "moduleDirectories": ["node_modules", "../node_modules"]
}
